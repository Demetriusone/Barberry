//begin header
+b.HEADER.header.header__main
    +e.content
        +e.container.container
            +b.NAV.nav._header
                -
                    navList = [
                        ['Home','home'],
                        ['Features','features'],
                        ['The shop','shop'],
                        ['The blog','blog'],
                        
                    ]
                +e.UL.list
                    for navLink in navList
                        +e.LI.list-item.has-dropdown: +e.A.list-link(href=`#${navLink[1]}`)= navLink[0]
                                +i('arr')
            +e.logo
                IMG(src='img/logo.png' alt='image')
            +e.options
                +e.search.search
                    a(href='#'): +i('search')
                +e.like.like
                    a(href='#'): +i('like')
                +b.customer._header
                    +e.A.link(href='#') My account 
                +e.lang
                    UL
                        li 
                            a USD
                                +i('arr')
                                
                        ul
                            li
                                a(href='#') RUS
                            li
                                a(href='#') UAH
                +e.cart
                    +e.A.cart-link(href="#") Cart
                        +e.SPAN.cart-count 0


                    


        

            
            
      





   
